---
interface Props {
    class: string;
}

const {class: _class = ""} = Astro.props;
---

<aside class=`top-0  flex  flex-wrap items-center justify-between gap-4 px-3 ${_class}`>
    <div class="w-full">
        <div class=" mt-4 w-full">
            <h1 class="whitespace-nowrap
                        
                        border-r-[24px]
                        border-bone-400
                        pr-5
                        text-right
                        font-black
                        text-4xl-fluid"
            >
                Mentorships
            </h1>
            <ul class="mt-2 border-b-2 border-bone-400 pb-2 text-right text-xl-fluid">
                <li class="text-xl font-black">TL;DR:</li>
                <li>$75 an hour</li>
                <li>Project-focused</li>
                <li>Yes, there will be homework</li>
            </ul>

        </div>
    </div>
</aside>
