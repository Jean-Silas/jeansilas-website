---
import type { CollectionEntry } from "astro:content";

interface Props {
    post: CollectionEntry<'blog'>
}

const { post } = Astro.props

console.log(post)
---


<div class="w-full px-2 unfolded:px-4 lg:px-0">
    <aside class="
        outline
        outline-1
        outline-space-800
        shadow-xl
        bg-space-950
        p-6
        max-w-4xl
        mx-auto
        
        
        lg:w-[360px]
        lg:ml-auto
        lg:mr-3
        
    ">
        <div class="
            text-2xl-fluid
            font-bold
    
            border-r-[16px]
            border-bone-400
            pr-5
            mt-0
            mb-4
    
            after:border-b-2
            after:border-bone-400
            after:block
            after:h-2
            ">
            {post.data.title}
        </div>
        {
            post.data.subtitle ?
            <div class="border-b border-space-800 pb-1 mb-2 text-xl text-space-300">{post.data.subtitle}</div>
            : <div></div>
        }
        <div class="flex flex-wrap">
            {
                post.data.tags.map((tag) => (
                    <div class="px-2 py-1 bg-space-500 m-1 text-lg capitalize">
                        {tag}
                    </div>
                ))
            }
        </div>
    </aside>
</div>