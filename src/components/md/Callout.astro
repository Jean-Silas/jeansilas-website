---
interface Props {
    kind?: "summary" | "warning" | "info"
    slug?: string
}

const { kind } = Astro.props
---

<section class="border-l-4 border-space-600 pl-4 my-4  pb-1 shadow-md">
    <p> {
        (kind === "summary") 
            ? <strong class="text-fc-[1.15rem_4.6vw_1.60rem]">TL;DR:</strong>
        : (kind === "warning")
            ? <strong>WARNING</strong>
        : (kind === "info")
            ? <strong>INFO</strong>
        : <strong>Err</strong>
    } </p>
    <slot></slot>
</section>